<% if !user_signed_in? %>
  <div class="jumbotron">
    <%= link_to "Sign Up To Write A Review", new_user_session_path%>
  </div>
<% end %>
<div class="row">
  <% @movies.each do |movie| %>
  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
      <%=link_to (image_tag movie.image.url(:medium), class: "image"), movie %>
    </div>
  </div>
  <% end %>
</div>